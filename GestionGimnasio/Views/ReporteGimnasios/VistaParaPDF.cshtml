@model IEnumerable<GestionGimnasio.Models.tbGimnasios>

@{
    ViewData["Title"] = "VistaParaPDF";
    Layout = null;
    int num=0;
    num++;
    string fecha = DateTime.Now.ToString("dd/MM/yyyy");
}
<link rel="stylesheet" href="~/../css/bootstrap.min.css">
<link rel="stylesheet" href="~/../css/atlantis.min.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="card">
    <div class="row">
        <h2 class="col-8">Reporte de Gimnasios</h2>
        <h2 class="col-2">@fecha</h2>
    </div>
    <div class="col-sm-12" style="display:block; justify-items:center">
        <img src="~/img/logo-login.png" alt="Logo" class="img-fluid" style="max-width: 12%;">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="tablaIndex">
                <thead>
                    <tr>
                        <th>
                            Gimnasio
                        </th>
                        <th>
                            Municipio
                        </th>
                        <th>
                            Direccion
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gimna_Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Munic_CodigoNavigation.Munic_Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gimna_Direccion)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <footer class="footer" style="position:relative; top:860px">
        <div style="display:flex; justify-content:end">Pagina @num</div>
    </footer>
</div>