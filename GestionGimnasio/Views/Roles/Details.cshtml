@model GestionGimnasio.Models.tbRoles
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Context.Session.SetString("titulo", "Roles");
}
<div class="card">
    <div class="card-header" style="display:flex; justify-content:space-between">
        <h1>Detalles</h1>
        <div>
            <a asp-action="Index" class="btn btn-warning" disable="disable">
                <i class="fas fa-reply"></i>Volver</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Roles_Descripcion)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Roles_Descripcion)
                </dd>
            </div>            
        </dl>
        <div class="row">
            <div class="col-md-3">
                <h5>Pantallas</h5>
                @if (ViewBag.NombresPantalla != null && ((List<string>)ViewBag.NombresPantalla).Any())
                {
                    int contador = 0;
                    <ul>
                        @foreach (var nombrePantalla in (List<string>)ViewBag.NombresPantalla)
                        {
                            contador++;
                            @if (contador <= 5){
					        	<li>@nombrePantalla</li>
                            }
                        }
                    </ul>
                }
                else
                {
                    <p>Este rol no tiene pantallas asociadas.</p>
                }
            </div>
            <div class="col-md-3">
                @if (ViewBag.NombresPantalla != null && ((List<string>)ViewBag.NombresPantalla).Any())
                {
                    int contador = 0;
                    <ul>
                        @foreach (var nombrePantalla in (List<string>)ViewBag.NombresPantalla)
                        {
                            contador++;
                            @if (contador >5 && contador<=11)
                            {
                                <li>@nombrePantalla</li>
                            }
                        }
                    </ul>
                }
            </div>
            <div class="col-md-3">
                @if (ViewBag.NombresPantalla != null && ((List<string>)ViewBag.NombresPantalla).Any())
                {
                    int contador = 0;
                    <ul>
                        @foreach (var nombrePantalla in (List<string>)ViewBag.NombresPantalla)
                        {
                            contador++;
                            @if (contador > 11 && contador <= 17)
                            {
                                <li>@nombrePantalla</li>
                            }
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<div class="row"></div>
<div class="card">
    <div class="card-header">
        <h3>Auditoria</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Accion</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Creacion</th>
                    <td>@Html.DisplayFor(model => model.Usuar_CreacionNavigation.Usuar_Nombre)</td>
                    <td>@Html.DisplayFor(model => model.Fecha_Creacion)</td>
                </tr>
                <tr>
                    <th>Modificacion</th>
                    <td>@Html.DisplayFor(model => model.Usuar_ModificacionNavigation.Usuar_Nombre)</td>
                    <td>@Html.DisplayFor(model => model.Fecha_Modificacion)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>