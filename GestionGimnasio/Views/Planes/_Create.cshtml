@model GestionGimnasio.Models.tbPlanes
    <!-- Card Structure -->
    <div class="card" style="border-radius: 10px; overflow: hidden;">
        <div class="card-header" style="
        background-color: #000000;
        opacity: 1;
        background-image:
            linear-gradient(rgba(255, 255, 255, 0.05) 1.7px, transparent 0.5px),
            linear-gradient(to right, rgba(255, 255, 255, 0.05) 0.2px, #000000 1.7px);
        background-size: 55px 55px;
        color: white;
        min-height: 15vh;
        display: flex;
        align-items: flex-end;
        padding-left: 20px;
        padding-bottom: 10px;
        ">
            <div style="
                    position: absolute;
                    top: 0;
                    right: 0;
                    width: 40%;
                    height: 100%;
                    background: radial-gradient(circle at right, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0) 70%);
                    pointer-events: none;
            "></div>
            <img src="~/img/dumbbell-solid.svg" alt="Dumbbell Icon" style="
                position: absolute;
                top: -2%;
                right: 5%;
                width: 300px; /* Ajusta el tamaño de la imagen */
                height: auto;
                opacity: 0.04; /* Ajusta la transparencia */
                pointer-events: none;
            ">
            <h5 class="card-title" style="font-size: 21px; color: white; font-weight:600">Crear Plan</h5>
            </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Plane_Nombre" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="Plane_Nombre" class="form-control" />
                            <span asp-validation-for="Plane_Nombre" class="text-warning"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Plane_Descripcion" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="Plane_Descripcion" class="form-control" />
                            <span asp-validation-for="Plane_Descripcion" class="text-warning"></span>
                        </div>
                        </div>  <!-- Cierra la fila después de dos campos -->
                        <div class="row"> 
                        <div class="form-group col-md-6">
                            <label asp-for="Plane_DuracionDias" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input id="Plane_Duracion" asp-for="Plane_DuracionDias" class="form-control" type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
                            <span id="errorDuracion" class="text-warning">Ingrese una Duracion Valida</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Plane_Precio" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input id="Plane_Precio" asp-for="Plane_Precio" class="form-control" type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
                            <span id="errorPrecio" class="text-warning">Ingrese una Precio Valido</span>
                        </div>
                        </div>  <!-- Cierra la fila después de dos campos -->
                        <div class="form-group d-flex justify-content-center mt-3">
                            <button type="submit" class="primary-button mx-2" id="guardar">
                                <span>
                                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M0 0h24v24H0z" fill="none"></path>
                                        <path fill="currentColor" d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"></path>
                                    </svg>
                                    Crear
                                </span>
                            </button>
                            <button type="button" class="secondary-button mx-2" data-dismiss="modal">
                                <span>
                                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path fill="none" d="M0 0h24v24H0z"></path>
                                        <path fill="currentColor" d="M15 18l-6-6 6-6"></path>
                                    </svg>
                                    Regresar
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
       </div>
   </div>
<script src="~/../js/core/jquery.3.2.1.min.js"></script>
<script>    
    $("#errorDuracion").hide();
    $("#errorPrecio").hide();
	$(document).ready(function () {
		$("#Plane_Duracion").change(function () {
			if ($("#Plane_Duracion").val() == 0) {
				$("#errorDuracion").show();
			}
			else {
				$("#errorDuracion").hide();
			}
		});
		$("#Plane_Precio").change(function () {
			if ($("#Plane_Precio").val() == 0) {
				$("#errorPrecio").show();
			}
			else {
				$("#errorPrecio").hide();
			}
		});

		$('#guardar').click(function () {
            if ($("#Plane_Duracion").val() == 0) {
				$("#errorDuracion").show();
			}
			else {
				$("#errorDuracion").hide();
			}
			if ($("#Plane_Precio").val() == 0) {
				$("#errorPrecio").show();
			}
			else {
				$("#errorPrecio").hide();
            }
		});

        $('#guardar').click(function(){
            if($(".text-warning").length > 0){
                iziToast.error({
                    title: 'Error',
                    message: 'Rellena los campos necesarios.',
                    position: 'topRight',
                    timeout: 5000,
                    close: false
                });
            }
        });
    });
</script>